<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text appearances !-->

    <style name="BigTextView" parent="TextAppearance.AppCompat">
        <item name="android:gravity">left</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>


    <!-- Text sizes !-->

    <style name="Text" parent="TextAppearance.AppCompat"/>

    <style name="Text.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Big">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Text.ExtraLarge">
        <item name="android:textSize">44sp</item>
    </style>

    <style name="DialogTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ErrorTextView" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/core_error_color</item>
    </style>

</resources>