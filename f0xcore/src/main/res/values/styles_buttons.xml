<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Buttons -->
    <style name="Button" parent="@style/Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/core_button_text_size</item>
        <item name="android:textColor">@color/core_button_text_color</item>
        <!--<item name="android:textAllCaps">false</item>-->
        <item name="android:padding">@dimen/core_button_padding</item>
    </style>

    <style name="Button.Primary">
        <!--<item name="android:layout_margin">6dp</item>-->
        <item name="android:background">@drawable/bg_button_yellow</item>
        <item name="android:textColor">@drawable/button_text_color</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/bg_button_secondary</item>
        <item name="android:textColor">@color/core_primary_color</item>
    </style>

    <style name="Button.Borderless">
        <item name="android:background">@drawable/bg_button_borderless</item>
        <item name="android:textColor">@drawable/button_borderless_text_color</item>
    </style>

    <style name="Button.Borderless.Small" parent="Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/spacing_tiny</item>
        <item name="android:textSize">@dimen/button_text_small_size</item>
    </style>
</resources>