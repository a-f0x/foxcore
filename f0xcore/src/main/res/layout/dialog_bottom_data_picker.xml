<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/core_primary_color"
              android:orientation="vertical"
              android:padding="@dimen/core_padding_middle">

    <LinearLayout
            android:id="@+id/customCalcWheel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

        <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/month"
                style="@style/CustomDataPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/day"
                style="@style/CustomDataPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/year"
                style="@style/CustomDataPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

    </LinearLayout>

    <Button
            android:id="@+id/readyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/core_padding_middle"
            android:background="@drawable/bg_button_green_border"
            android:text="@string/core_date_picker_button_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/core_button_text_size"/>

</LinearLayout>